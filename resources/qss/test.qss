/*
   Use key inside <> to insert colors from the current palette.
   Examples: <accent>, <support>, <neutral>, <bg>, <fg> * Lightness modifiers are also available:
   e.g., <accent_l1>,<accent_l2>,<accent_l3>,<accent_d1>,<accent_d2>,<accent_d3>,
   <support_l1>,<support_l2>,<support_l3>,<support_d1>,<support_d2>,<support_d3>,
   <neutral_l1>,<neutral_l2>,<neutral_l3>,<neutral_d1>,<neutral_d2>,<neutral_d3>,
   <bg1>,<bg2>,
   <fg1>,<fg2>,
*/

QWidget {
    background-color: <bg>;
    color: <fg1>;
}

QPushButton {
    background-color: <accent_ln >;
    color: <accent_d3>;
    border: 1px solid <accent>;
    border-radius: 4px;
/*    font-size: 14px;*/
    font-weight: bold;
    padding: 5px 10px;
    icon-size: 16px;
}
QPushButton:hover {
    background-color: <support_l1>;
}
QPushButton:pressed {
    background-color: <accent_d1>;
}
QPushButton:disabled {
    background-color: <bg2>;
    color: <fg2>;
}

QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: <accent_ln>;
    color: <accent_d3>;
    border-radius: 4px;
    padding: 5px 10px;
    border: 1px solid <accent>;
}
QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    background-color: <support_ln>;
    border: 1px solid <accent>;
}

QTabWidget::pane {
    border-top: 2px solid <accent>;
}
QTabBar::tab {
    padding: 8px 12px;
    border: 0;
    min-width: 100px;
}

QTabBar::tab:selected, QTabBar::tab:hover {
    color: <accent_d3>;
    font-size: 14px;
    font-weight: bold;
}

QToolBox{
    icon-size: 30px;
    spacing: 5px;
}

QToolBox::tab {
    border: 1px solid <bg2>;
    background-color: <bg1>;
    color: <accent_l1>;
    padding-left: 5px;
    font-weight: bold;
    border-radius: 4px;
}

QToolBox::tab:selected {
    background-color: <accent_l3>;
    border: 1px solid <accent>;
    color: <accent_d3>;
    font-weight: bold;
    padding-left: 5px;
    border-radius: 4px;
}

QToolBox::tab:hover {
    background-color: <accent_l1>;
    color: white;
}

QComboBox {
    background-color: <accent_ln>;
    color: <accent_d3>;
    border-radius: 4px;
    padding: 5px 10px;
    border: 1px solid <accent>;
}
QComboBox:hover {
    border: 1px solid <accent>;
}
QComboBox::drop-down {
    width: 20px;
    border-left: 0px solid <neutral>;
}
QComboBox::down-arrow {
    image: <img: drop down; color:accent>;
    width: 10px;
    height: 10px;
}
/*
   Minimal QScrollBar style (keeps working default buttons)
*/

QScrollBar:horizontal {
    background: <bg1>;
    height: 10px;
    margin: 0 20px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal {
    background: <accent>;
    min-width: 20px;
    border-radius: 5px;
}
QScrollBar::handle:horizontal:hover {
    background: <accent_l1>;
}

/* keep platform's default buttons */
QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    background: none;
    border: none;
    width: 16px;
}
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

/* --- Vertical Scrollbar --- */

QScrollBar:vertical {
    background: <bg1>;
    width: 10px;
    margin: 20px 0;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: <accent>;
    min-height: 20px;
    border-radius: 5px;
}
QScrollBar::handle:vertical:hover {
    background: <accent_l1>;
}

/* keep platform's default buttons */
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    background: none;
    border: none;
    height: 16px;
}
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

/* QSpinBox */
QSpinBox {
    background-color: <accent_ln >;
    color: <accent_d3>;
    border: 1px solid <accent>;
    border-radius: 4px;
    padding: 3px 6px;
    font-size: 14px;
}

/* Hover / focus effects */
QSpinBox:hover {
    border-color: <support_l1>;
}
QSpinBox:focus {
    background-color: <accent_ln >;
    color: <accent_dn>;
    border: 1px solid <accent>;
    border-radius: 4px;
}

/* Up/Down buttons for SpinBox */
QSpinBox::up-button,
QSpinBox::down-button {
    background-color: <bg1>;
    width: 18px;
}

QSpinBox::up-button:hover,
QSpinBox::down-button:hover {
    background-color: <support_l1>;
}

QSpinBox::up-button:pressed,
QSpinBox::down-button:pressed {
    background-color: <accent_d1>;
}

/* Arrows */
QSpinBox::up-arrow,
QSpinBox::down-arrow {
    width: 10px;
    height: 10px;
    image: <img: action; color: accent>;
    border: none;
}

/* Disabled state */
QSpinBox:disabled {
    background-color: <bg2>;
    color: <fg2>;
    border-color: <neutral_l2>;
}
QSpinBox::up-button:disabled,
QSpinBox::down-button:disabled {
    background-color: <bg2>;
    border-color: <neutral_l2>;
}


/* QToolButton */
QToolButton {
    background-color: <accent_ln>;
    color: <accent_d3>;
    border: 1px solid <accent>;
    border-radius: 4px;
/*    font-size: 14px;*/
/*    font-weight: bold;*/
    padding: 4px 10px;
    border-radius: 2px;
}

QToolButton:hover {
    background-color: <support_l1>;
}

QToolButton:pressed {
    background-color: <accent_d1>;
    color: white;
}

QToolButton:checked {
    background-color: <accent>;
    color: white;
}

QToolButton:disabled {
    background-color: <bg2>;
    color: <fg2>;
    border-color: <neutral_l2>;
}

/* QCheckBox */
QCheckBox {
    spacing: 6px;
    color: <fg1>;
    font-size: 14px;
}

/* Hide default indicator shape — replace fully with custom */
QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid <neutral>;
    border-radius: 4px;
    background-color: <bg1>;
}

/* Hover */
QCheckBox::indicator:hover {
    border-color: <support_l1>;
}

/* Checked */
QCheckBox::indicator:checked {
    background-color: <accent_l2>;
    border-color: <accent>;
}

/* Check mark */
QCheckBox::indicator:checked::icon {
    /* If you plan to use SVG check mark icons, insert here */
    /* Otherwise Qt will draw default check mark on accent bg */
}

/* Pressed */
QCheckBox::indicator:pressed {
    background-color: <accent_d1>;
}

/* Disabled */
QCheckBox:disabled {
    color: <fg2>;
}
QCheckBox::indicator:disabled {
    background-color: <bg2>;
    border-color: <neutral_l2>;
}

/* QTableView Base */
QTableView {
    background-color: <bg1>;
    alternate-background-color: <bg>;
    gridline-color: <neutral_l2>;
    color: <fg1>;
    border-top: 0px solid <neutral>;
    border-radius: 6px;
    selection-background-color: <accent>;
    selection-color: <fg>;
    font-size: 14px;
    outline: none;
}

/* Remove heavy cell borders — keep subtle grid lines */
QTableView::item {
    padding: 6px;
    border: none;
}

/* Row hover highlight */
QTableView::item:hover:!selected {
    background-color: <accent_ln>;
    color: <fg1>;
}

/* Selected row state */
QTableView::item:selected {
    background-color: <accent_l3>;
    color: <accent_d3>;
}

/* Disabled state */
QTableView:disabled {
    background-color: <bg2>;
    color: <fg2>;
}

/* Header Styling (Horizontal & Vertical) */
QHeaderView::section {
    background-color: <bg>;
    color: <fg1>;
    padding: 6px 10px;
    border: none;
    border-bottom: 1px solid <neutral>;
    font-weight: bold;
}

/* Header hover */
QHeaderView::section:hover {
    background-color: <support_l1>;
}

/* Resize grip indicator */
QHeaderView::section:pressed {
    background-color: <accent_d1>;
}

/* Vertical grid line removal for cleaner look */
QHeaderView {
    border: none;
}

/* Scrollbars inside table (minimal style) */
QTableView QScrollBar:vertical,
QTableView QScrollBar:horizontal {
    background: <bg2>;
    border: none;
}
QTableView QScrollBar::handle {
    background: <neutral>;
    border-radius: 3px;
}
QTableView QScrollBar::handle:hover {
    background: <support_l1>;
}
