/*
   Use key inside <> to insert colors from the current palette.
   Examples: <accent>, <support>, <neutral>, <bg>, <fg> * Lightness modifiers are also available:
   e.g., <accent_l1>,<accent_l2>,<accent_l3>,<accent_d1>,<accent_d2>,<accent_d3>,
   <support_l1>,<support_l2>,<support_l3>,<support_d1>,<support_d2>,<support_d3>,
   <neutral_l1>,<neutral_l2>,<neutral_l3>,<neutral_d1>,<neutral_d2>,<neutral_d3>,
   <bg1>,<bg2>,
   <fg1>,<fg2>,
*/

QWidget {
    background-color: <bg>;
    color: <accent_d3>;
}

QPushButton {
    background-color: <bg1>;
    border-bottom: 1px solid <neutral>;
    padding: 5px 10px;
    border-radius: 5px;
    min-height: 25px;
    min-width: 150px;
    max-width: 150px;
    font-size: 14px;
    font-weight: bold;
}
QPushButton:hover {
    background-color: <support_l1>;
}
QPushButton:pressed {
    background-color: <accent_d1>;
}
QPushButton:disabled {
    background-color: <bg2>;
    color: <fg2>;
}

QLineEdit, QTextEdit, QPlainTextEdit {
    border: 1px solid <neutral>;
    border-radius: 4px;
    background-color: <bg1>;
    padding: 4px;
    min-height: 25px;
}
QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    background-color: <support_l3>;
}

QTabWidget::pane {
    border-top: 2px solid <accent>;
}
QTabBar::tab {
    padding: 8px 12px;
    border: 0;
    min-width: 100px;
}
QTabBar::tab:selected, QTabBar::tab:hover {
    color: <neutral_d3>;
    font-size: 14px;
    font-weight: bold;
}

QToolBox{
    icon-size: 30px;
    spacing: 5px;
}
QToolBox::tab {
    border: 1px solid <neutral_l3>;
    background-color: <bg1>;
    color: <accent_l2>;
    padding-left: 5px;
    font-weight: bold;
}

QToolBox::tab:selected {
    background-color: <bg2>;
    color: <accent>;
    font-weight: bold;
    padding-left: 5px;
}

QToolBox::tab:hover {
    background-color: <accent_l1>;
    color: white;
}

QComboBox {
    border: 1px solid <neutral>;
    border-radius: 4px;
    padding: 3px 6px;
    min-height: 25px;
}
QComboBox:hover {
    border: 1px solid <accent>;
}
/*
   Minimal QScrollBar style (keeps working default buttons)
*/

QScrollBar:horizontal {
    background: <bg1>;
    height: 10px;
    margin: 0 20px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal {
    background: <accent>;
    min-width: 20px;
    border-radius: 5px;
}
QScrollBar::handle:horizontal:hover {
    background: <accent_l1>;
}

/* keep platform's default buttons */
QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    background: none;
    border: none;
    width: 16px;
}
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

/* --- Vertical Scrollbar --- */

QScrollBar:vertical {
    background: <bg1>;
    width: 10px;
    margin: 20px 0;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: <accent>;
    min-height: 20px;
    border-radius: 5px;
}
QScrollBar::handle:vertical:hover {
    background: <accent_l1>;
}

/* keep platform's default buttons */
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    background: none;
    border: none;
    height: 16px;
}
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}
